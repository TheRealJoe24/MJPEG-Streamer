{
    "name": "node-camera-streamer",
    "version": "1.0.0",
    "description": "Webcam and video streaming server",
    "main": "index.js",
    "scripts": {
        "test": "node ./test/test.js",
        "ffmpeg": "ffmpeg -f dshow -video_size 1280x720 -framerate 30 -rtbufsize 100M -i video=\"HD Pro Webcam C920\" -movflags faststart -framerate 30 -vcodec mjpeg -preset veryfast -maxrate 1000000k -b:v 2M -bufsize 2M -f mjpeg -q 5 http://localhost:8082/stream.mjpeg -y -hide_banner -loglevel error",
        "dev": "concurrently \"npm:test\" \"npm:ffmpeg\"",
        "build-dev": "webpack --mode development",
        "build-prod": "webpack --mode production"
    },
    "keywords": [
        "camera",
        "server",
        "webcam",
        "videostream",
        "streamer",
        "mjpeg",
        "mpeg",
        "ffmpeg",
        "rpi",
        "client",
        "video",
        "media",
        "audio",
        "recording"
    ],
    "author": "TheRealJoe24",
    "license": "MIT",
    "dependencies": {
        "ws": "^7.4.4"
    },
    "devDependencies": {
        "babel-loader": "^8.2.2",
        "concurrently": "^6.0.2",
        "express": "^4.17.1",
        "webpack": "^5.33.2",
        "webpack-cli": "^4.6.0"
    }
}
